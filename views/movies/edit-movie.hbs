<div>

  <h2>Editar pel√≠cula</h2>

  <form action="/movies/{{getMovie._id}}/edit" method="POST">
    <label for="title">Nombre: </label>
    <input type="text" name="title" value="{{getMovie.title}}" />
    <br />
    <label for="genre">Genero: </label>
    <input type="text" name="genre" value="{{getMovie.genre}}" />
    <br />
    <label for="plot">Descripcion: </label>
    <input type="text" name="plot" value="{{getMovie.plot}}" />
    <br />
    {{#each getMovie.cast}}
      <label for="cast">Actor: {{name}}</label>
    {{/each}}
    <br />
    {{!-- De esta forma consigo que se marque el que tambien esta en "cast", pero luego me aparece duplicado en el siguiente each y nose como incluir el select solo del id que se repite --}}
    <select name="cast" multiple="true" >
        {{#each getMovie.cast}}
        <option value="{{_id}}" selected>{{name}}</option>
      {{/each}}
      {{#each celebritiesList}}
        <option value="{{_id}}">{{name}}</option>
      {{/each}}
    </select>

    <br />
    <button type="submit">Actualizar</button>
  </form>
</div>